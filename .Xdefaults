!! Latex in xfig
! Fig.inches: false
! Fig.startfontsize: 8
! Fig.userunit: cm
! Fig.startgridmode: 1  
! Fig.startposnmode: 1
! Fig.landscape: false
! Fig.paper_size: A4
! Fig.latexfonts: true
! Fig.startlatexFont: Default
! Fig.specialtext: true
! Fig.zoom: 4.0
! Fig.exportLanguage: pdftex
!! Regular settings
Fig.inches: false
Fig.startfontsize: 8
Fig.userunit: cm
Fig.startgridmode: 1  
Fig.startposnmode: 1
Fig.landscape: false
Fig.paper_size: A4
Fig.startpsFont: Helvetica
